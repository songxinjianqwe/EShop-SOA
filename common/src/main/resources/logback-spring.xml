<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%file : %line] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./log/Email-Service.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>15</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>10MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} [%file : %line] - %msg%n</pattern>
        </encoder>
    </appender>

    <springProfile name="pro">
        <logger name="cn.sinjinsong" level="INFO" additivity="false">
            <appender-ref ref="consoleAppender"/>
            <appender-ref ref="fileAppender"/>
        </logger>
        <logger name="dao" level="DEBUG" additivity="false">
            <appender-ref ref="consoleAppender"/>
            <appender-ref ref="fileAppender"/>
        </logger>
    </springProfile>
    
    <springProfile name="dev,test">
        <logger name="cn.sinjinsong" level="INFO" additivity="false">
            <appender-ref ref="consoleAppender"/>
            <appender-ref ref="fileAppender"/>
        </logger>
        <logger name="dao" level="DEBUG" additivity="false">
            <appender-ref ref="consoleAppender"/>
            <appender-ref ref="fileAppender"/>
        </logger>
    </springProfile>

</configuration>